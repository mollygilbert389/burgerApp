<h1>Burger Burger Time!</h1>

<h2>Burgers to be eaten!</h2>

<ul>
  {{#each burger}}
    {{#unless devoured}}
      	{{burgerName}}
    {{/unless}}
  <button class="change-status" data-id="{{id}}" data-newstatus="{{devoured}}">EAT IT!
	</button>
  {{/each}}
</ul>

<h2>Burgers that have been eaten!</h2>

<ul>
  {{#each burger}}
    {{#if devoured}}
      	{{burgerName}}
    {{/if}}
  {{/each}}
</ul>

<h2>Add a burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" id="ca" name="name">
  </div>

  <button type="submit">Add burger</button>
</form>

<form class="reset-form">
  <button type="submit">Reset All</button>
</form>
